@model StaffSalaryMonthlyViewModal
@{
    ViewData["Title"] = "GetStaffSalaryMonthlyList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <!--begin::Page Vendors Styles(used by this page)-->
    <link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
    <!--end::Page Vendors Styles-->

}
<div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <!--begin::Info-->
        <div class="d-flex align-items-center flex-wrap mr-2">
            <!--begin::Page Title-->
            <!--end::Page Title-->
            <!--begin::Actions-->
            <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-4 bg-gray-200"></div>
            <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">Maaş Listesi</h5>
            <!--end::Actions-->
        </div>
        <!--end::Info-->
        <!--begin::Toolbar-->
        <div class="d-flex align-items-center">

        </div>
        <!--end::Toolbar-->
    </div>
</div>

<br />

<div class="card card-custom">
    <div class="card card-custom">
        <div class="card-body  ">

            <!--begin: Datatable-->
            <div class="tab-content pt-5">
                <div class="row">
                    <div class="col-md-6">
                        <span class="text-dark mb-4 font-size-h4"><i class="fas fa-wallet text-dark mr-2"></i>  Maaş Tablosu</span>
                    </div>
                    <div class="col-md-6">
                        <div class="col-md-8 float-right">
                            <!--begin: Search Form-->
                            <form asp-controller="StaffSalary" asp-action="GetStaffSalaryMonthlyList" method="post">

                                <div class="row ">
                                    <div class="col-md-4"></div>
                                    <div class="input-group d-inline col-md-5">
                                        <div class="input-group date input-group-solid" id="kt_datetimepicker_79" data-target-input="nearest">
                                            <input name="dateTime" type="text" class="form-control form-control-lg datetimepicker-input" value="@Model.filterDate.Month.@Model.filterDate.Year" placeholder="Tarih Seçiniz" data-target="#kt_datetimepicker_79" autocomplete="off" />
                                            <div class="input-group-append" data-target="#kt_datetimepicker_79" data-toggle="datetimepicker">
                                                <span class="input-group-text">
                                                    <i class="ki ki-calendar"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <button class="btn btn-primary btn-primary--icon d-inline col-md-3" type="submit">
                                        <span>
                                            <i class="la la-search"></i>
                                            <span>Listele</span>
                                        </span>
                                    </button>
                                </div>
                            </form>

                        </div>
                    </div>


                </div>


                <hr />

            </div>
            <div class="card-body">
                <!--begin: Datatable-->
                <table class="table table-separate table-head-custom table-checkable" id="kt_datatable">
                    <thead>
                        <tr>
                            <th width="10%">No</th>
                            <th width="25%">Ad Soyad</th>
                            <th width="20%">Şube</th>
                            <th width="25%">Bölüm</th>                         
                            <th width="10%">Borçlar</th>
                            <th width="10%">Maaş Dökümü</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ListStaffSalaryMonthly)
                        {
                            <tr>
                                <td>@item.CardNo</td>
                                <td>@item.NameSurname</td>
                                <td>@item.Branch</td>
                                <td>@item.Department</td>             
                                <td><a onclick="GetDebtMonthly(@item.StaffId)" class="btn btn-outline-info btn-sm">Detay</a></td>
                                <td><a onclick="GetSalaryMonthly(@item.StaffId)" class="btn btn-outline-primary btn-sm">Detay</a></td>
                                

                            </tr>
                        }
                    </tbody>
                    <!-- Modal -->

                </table>
                <!--end: Datatable-->
            </div>
        </div>
        <!--end::Card-->
    </div>
    <!--end::Container-->
</div>
@* update leave modal*@
<div id="GetDebtMonthlyModalDiv"></div>




<!--end::Entry-->
@section Scripts{
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/assets/js/pages/crud/datatables/advanced/column-rendering.js"></script>
    <script>
        var table = $('#kt_datatable_SalaryList');

        // begin first table

        table.DataTable({
            responsive: false,
            paging: true,
            sorting: false,
            "targets": 'no-sort',

            "order": [],
            "scrollX": true,

            "aoColumnDefs": [
                { "bSortable": false, "aTargets": ["_all"] }
            ]


        })
        $('#kt_datetimepicker_79').datetimepicker({
            locale: 'tr',
            format: 'MM.yyyy'
        });
    </script>

    <script>
        function GetDebtMonthly(id) {
            var modelContent = $("#GetDebtMonthlyModalDiv")
            $("#GetDebtMonthlyModalDiv").empty();
            var formData = {
                MonthDate:@Html.Raw(Json.Serialize(@Model.filterDate.Month)),
                YearDate:@Html.Raw(Json.Serialize(@Model.filterDate.Year)),
            };


            $.ajax({
                method: "GET",
                url: "/StaffSalary/GetDebtMonthlyModal/" + id,
                dataType: "html",
                data: formData,
                cache: false,
            }).done(function (content) {
                if (content != null) {
                    modelContent.html(content);
                }
                $("#GetDebtMonthlyModal").modal("show");


            }).fail(function (error) {
                alert(error);
            });
        }

        function GetSalaryMonthly(id) {
            var modelContent = $("#GetDebtMonthlyModalDiv")
            $("#GetDebtMonthlyModalDiv").empty();
            var formData = {
                MonthDate:@Html.Raw(Json.Serialize(@Model.filterDate.Month)),
                YearDate:@Html.Raw(Json.Serialize(@Model.filterDate.Year)),
            };
            $.ajax({
                method: "GET",
                url: "/StaffSalary/GetSalaryMonthlyModal/" + id,
                dataType: "html",
                data: formData,
                cache: false,
            }).done(function (content) {
                if (content != null) {
                    modelContent.html(content);
                }
                $("#GetSalaryMonthlyModal").modal("show");

              
            }).fail(function (error) {
                alert(error);
            });


        }
      
    </script>
}