
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <!--begin::Info-->
        <div class="d-flex align-items-center flex-wrap mr-2">
            <!--begin::Page Title-->
            <!--end::Page Title-->
            <!--begin::Actions-->
            <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-4 bg-gray-200"></div>
            <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">Sistem Değişkenleri</h5>
            <!--end::Actions-->
        </div>
        <!--end::Info-->
       

    </div>
</div>
<div class="card card-custom">
    @*@await Component.InvokeAsync("StaffNavbar", new { id = @ViewBag.StaffId })*@
    <div class="card-body">
        <!--begin::Profile Personal Information-->
        <div class="d-flex flex-row">

            <!--begin::Aside-->
            <div class="flex-row-auto  w-300px w-xxl-400px h-75" id="kt_profile_aside">
                <!--begin::Profile Card-->
                <div class="card card-custom card-stretch">
                    <!--begin::Body-->
                    <div class="card-body pt-4">
                        <!--begin::User-->
                        <div class=" align-items-center">
                            <!--begin::Card-->


                            <div>
                                <div class="form-group row">
                                    <div class="col-lg-12 col-xl-12 ">
                                        <select id="kt_select2_1" onchange="generalTypeChange()" style=" width: 100% !important; padding-right:13px !important;" class="form-control form-control-solid form-control-lg pr-0" asp-items="@ViewBag.GeneralTypeList">
                                            <option class="text-center" value="-1" selected>Değişken Türü Seçiniz</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-12 col-xl-12">
                                        <button id="btnGetLeaveTypes" onclick="GetLeaveTypes()" class="form-control form-control-solid form-control-lg btn btn-primary"> İzin Türlerini Listele </button>
                                    </div>
                                </div>

                                <div class="form-group row">

                                    <div class="col-lg-12 col-xl-12">
                                        <button id="btnGetLeaveRules" onclick="GetLeaveRules()" class="form-control form-control-solid form-control-lg btn btn-primary"> İzin Kurallarını Listele </button>
                                    </div>
                                </div>
                                <div class="form-group row">

                                    <div class="col-lg-12 col-xl-12">
                                        <button id="btnGetRoles" onclick="GetRoles()" class="form-control form-control-solid form-control-lg btn btn-primary"> Rolleri Listele </button>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-12 col-xl-12">
                                        <button id="btnGetCompanies" onclick="GetCompanies()" class="form-control form-control-solid form-control-lg btn btn-primary"> Şirketleri Listele </button>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-12 col-xl-12">
                                        <button id="btnGetCompanyBranchs" onclick="GetCompanyBranches()" class="form-control form-control-solid form-control-lg btn btn-primary"> Şubeleri Listele </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!--end::User-->
                        <!--begin::Contact-->

                    </div>
                    <!--end::Body-->
                </div>
                <!--end::Profile Card-->
            </div>
            <!--end::Aside-->
            <!--begin: Datatable-->
            <div class="w-100" id="systemVariableTable">

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/assets/js/pages/crud/forms/widgets/select2.js"></script>
    <script>
        $(document).ready(function () {
            if (@ViewBag.GeneralSubTypeUpdateStatus == true) {
                Swal.fire("Güncellendi!", "Güncelleme işlemi başarılı!", "success");
            }

            if (localStorage.SystemVariableId != "0" && localStorage.SystemVariableId != null && localStorage.SystemVariableId < 1000) {
                $('#kt_select2_1').val(Number(localStorage.SystemVariableId));
                $('#kt_select2_1').select2().trigger('change');
                generalTypeChange();
            }
            else if (localStorage.SystemVariableId == 1000) {
                GetLeaveTypes();
                $("#btnGetLeaveTypes").addClass("active");
            }
            else if (localStorage.SystemVariableId == 1001) {
                GetLeaveRules();
                $("#btnGetLeaveRules").addClass("active");
            }
            else if (localStorage.SystemVariableId == 1002) {
                GetCompanies();
                $("#btnGetCompanies").addClass("active");
            }
            else if (localStorage.SystemVariableId == 1003) {
                GetRoles();
                $("#btnGetRoles").addClass("active");
            }
            else if (localStorage.SystemVariableId == 1004) {
                GetCompanyBranches();
                $("#btnGetCompanyBranchs").addClass("active");
            }
        });
    </script>
    <script>

        function generalTypeChange() {
            var modelContent = $("#systemVariableTable")
            $("#systemVariableTable").empty();

            $("#btnGetLeaveTypes").removeClass("active");
            $("#btnGetLeaveRules").removeClass("active");
            $("#btnGetRoles").removeClass("active");
            $("#btnGetCompanies").removeClass("active");
            $("#btnGetCompanyBranchs").removeClass("active");

            var id = document.getElementById("kt_select2_1").value;

            if (id > 0) {
                $.ajax({
                    method: "GET",
                    url: "/SystemVariable/GetGeneralTypeById/" + id,
                    dataType: "html",
                    cache: false,
                }).done(function (content) {
                    localStorage.SystemVariableId = id;
                    if (content != null) {
                        modelContent.html(content);
                    }
                }).fail(function (error) {
                    alert(error);
                });
            }
        }
    </script>

 
    <script>

        function GetLeaveTypes() {       
            $("#btnGetRoles").removeClass("active");
            $("#btnGetCompanyBranchs").removeClass("active");
            $("#btnGetCompanies").removeClass("active");
            $("#btnGetLeaveRules").removeClass("active");

            var modelContent = $("#systemVariableTable")
            $("#systemVariableTable").empty();
            localStorage.SystemVariableId = 1000;

            $.ajax({
                method: "GET",
                url: "/SystemVariable/GetLeaveTypeList/",
                dataType: "html",
                cache: false,
            }).done(function (content) {
                if (content != null) {
                    modelContent.html(content);
                }
            }).fail(function (error) {
                alert(error);
            });

        }
        function GetLeaveRules() {
            $("#btnGetLeaveTypes").removeClass("active");
            $("#btnGetRoles").removeClass("active");
            $("#btnGetCompanyBranchs").removeClass("active");
            $("#btnGetCompanies").removeClass("active");
