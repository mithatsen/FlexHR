
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-custom">
    @*@await Component.InvokeAsync("StaffNavbar", new { id = @ViewBag.StaffId })*@
    <div class="card-body">
        <!--begin::Profile Personal Information-->
        <div class="d-flex flex-row">

            <!--begin::Aside-->
            <div class="flex-row-auto offcanvas-mobile w-300px w-xxl-400px h-75" id="kt_profile_aside">
                <!--begin::Profile Card-->
                <div class="card card-custom card-stretch">
                    <!--begin::Body-->
                    <div class="card-body pt-4">
                        <!--begin::User-->
                        <div class=" align-items-center">
                            <!--begin::Card-->


                            <div>
                                <div class="form-group row">
                                    <label class="col-xl-6 col-lg-6 ml-1 col-form-label">Değişken Türü</label>
                                    <div class="col-lg-12 col-xl-12">
                                        <select id="kt_select2_1" onchange="generalTypeChange()" style=" width: 100% !important;" class="form-control form-control-solid form-control-lg" asp-items="@ViewBag.GeneralTypeList">
                                            <option value="-1" selected>Değişken Türü Seçiniz</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-xl-6 col-lg-6 ml-1 col-form-label">İzin Türleri</label>
                                    <div class="col-lg-12 col-xl-12">
                                        <button onclick="GetLeaveTypes()" class="form-control form-control-solid form-control-lg btn btn-primary"> İzin Türlerini Listele </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!--end::User-->
                        <!--begin::Contact-->

                    </div>
                    <!--end::Body-->
                </div>
                <!--end::Profile Card-->
            </div>
            <!--end::Aside-->
            <!--begin: Datatable-->
            <div class="w-100" id="systemVariableTable">

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/assets/js/pages/crud/forms/widgets/select2.js"></script>
    <script>

        function generalTypeChange() {
            var modelContent = $("#systemVariableTable")
            $("#systemVariableTable").empty();

            var id = document.getElementById("kt_select2_1").value;
         
            if (id > 0) {
                $.ajax({
                    method: "GET",
                    url: "/SystemVariable/GetGeneralTypeById/" + id,
                    dataType: "html",
                    cache: false,
                }).done(function (content) {
                    localStorage.SystemVariableId = id;
                    console.log(localStorage.SystemVariableId)
                    if (content != null) {
                        modelContent.html(content);
                    }
                }).fail(function (error) {
                    alert(error);
                });
            }
        }
    </script>
    <script>
        $(document).ready(function () {
            if (@ViewBag.GeneralSubTypeUpdateStatus == true) {
                Swal.fire("Güncellendi!", "Güncelleme işlemi başarılı!", "success");
            }

            if (localStorage.SystemVariableId != "0" && localStorage.SystemVariableId!=null ) {
                $('#kt_select2_1').val(Number(localStorage.SystemVariableId));
                $('#kt_select2_1').select2().trigger('change');

                generalTypeChange();
            }
        });
    </script>

    <script>

        function GetLeaveTypes() {
            var modelContent = $("#systemVariableTable")
            $("#systemVariableTable").empty();


            $.ajax({
                method: "GET",
                url: "/SystemVariable/GetLeaveTypeList/",
                dataType: "html",
                cache: false,
            }).done(function (content) {
                if (content != null) {
                    modelContent.html(content);
                }
            }).fail(function (error) {
                alert(error);
            });

        }
    </script>
}
