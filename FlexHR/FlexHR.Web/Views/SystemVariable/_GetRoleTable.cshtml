                                            <div class="form-group row">
                                                <label>Yetki Tipi</label>
                                                <div class="input-group">
                                                    <select id="authorizeType" class="form-control form-control-solid form-control-lg" name="AuthorizeTypeGeneralSubTypeId" asp-items="ViewBag.AuthorizeTypes">
