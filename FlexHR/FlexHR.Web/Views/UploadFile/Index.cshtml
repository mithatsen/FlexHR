        });
    </script>
    <script>
        var id = '@EnumFileType.StaffTrackingFile.GetHashCode()';
        var KTDatatablesStaffTracking = function () {
            var initTable1 = function () {
                var table = $('#kt_datatable_StaffTracking')
                table.DataTable({
                    destroy: true,
                    serverSide: true,
                    processing: true,
                    responsive: false,
                    fixedHeader: true,

                    "scrollX": true,
                    "bFilter": true,
                    searching: true,
                    sortable: false,
                    "pageLength": 10,
                    "search": {
                        "caseInsensitive": true
                    },
                    pagingType: 'full_numbers',
                    "order": [[0, "desc"]],
                    "ajax": {
                        "url": "/UploadFile/LoadDataGenericFileTableList/" + id,
                        "type": "POST",
                        "datatype": "json",
                    },
                    columnDefs: [

                        {
                            targets: -1,
                            title: 'Aktif Mi',
                            width: '20px',

                            render: function (data, type, full, meta) {
                                var status = {
                                    'True': {
                                        'title': '',
                                        'state': 'success'
                                    },
                                    'False': {
                                        'title': '',
                                        'state': 'danger'
                                    },
                                };
                                if (typeof status[data] === 'undefined') {
                                    return data;
                                }
                                return '<span class="label label-' + status[data].state + ' label-dot label-xl  mr-2"></span>'
                                // + '<span class="font-weight-bold text-' + status[data].state + '">' + status[data].title + '</span>';
                            },
                        },

                    ],
                    "rowCallback": function (row, data, index) { },
                    "initComplete": function (settings, json) { }
                });
            };
            return {
                //main function to initiate the module
                init: function () {
                    initTable1();
                },
            };
        }();

    </script>
    <script>
        function addUpdateExcelButtonClick() {
            var file = $("#customFile").prop('files');
            var formData = new FormData();

            formData.append("file", file[0]);
            formData.append("Date", $("#ExcelUploadDate").val());
            formData.append("CategoryId", $("#categoryId").val());
            $.ajax({
                method: 'Post',
                url: '/UploadFile/UploadingFileIsExist',
                data: formData,
                contentType: false,
                cache: false,
                processData: false,
            }).done(function (result) {
                if (result == true) {
                    Swal.fire({
                        title: "Uyarı!",
                        text: "Aynı isimde dosyanız bulunmaktadır. Onaylarsanız eski verileriniz silinecektir.",
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonText: "Evet",
                        cancelButtonText: "Hayır",
                        reverseButtons: true
                    }).then(function (result) {
                        debugger;
                        if (result.value) {
                            $.ajax({
                                method: "POST",
                                url: "/UploadFile/AddExcelWithAjax",
                                data: formData,
                                contentType: false,
                                cache: false,
                                processData: false,
                            }).done(function (result) {
                                var messsageList = result.message.split('|');
                                console.log(messsageList);

                                var tableRows = "";
                                for (var i = 0; i < messsageList.length; i++) {
                                    tableRows += "<tr><th>" + messsageList[i] + "</th></tr>";
                                }
                                var tableHtml = '<table class="table"><tbody>' + tableRows + '</tbody></table>';

                                debugger;
                                if (result.isSuccess == true) {
                                    Swal.fire({

                                        title: "Yüklendi!",
                                        text: result.message,
                                        icon: "success",
                                        showCancelButton: false
                                    }).then(function () {
                                        window.location.reload();
                                    })

                                } else {
                                    Swal.fire({
                                        width: 850,
                                        html: tableHtml,
                                        title: "Hata Listesi",
                                        icon: "error"
                                    })
                                }

                            })
                        } else if (result.dismiss === "cancel") {
                            Swal.fire({
                                title: "İptal Edildi",
                                text: "Kaydınız silinmedi",
                                icon: "error",
                                showCancelButton: false
                            })
                        }
                    })
                } else {
                    $.ajax({
                        method: "POST",
                        url: "/UploadFile/AddExcelWithAjax",
                        data: formData,
                        contentType: false,
                        cache: false,
                        processData: false,
                    }).done(function (result) {
                        debugger;
                        var messsageList = result.message.split('|');
                        console.log(messsageList);
                        if (result.isSuccess == true) {
                            Swal.fire({
                                title: "Yüklendi!",
                                text: result.message,
                                icon: "success",
                                showCancelButton: false
                            }).then(function () {
                                window.location.reload();
                            })

                        } else {
                            Swal.fire({
                                title: "Hata!",
                                text: result.message,
                                icon: "error",
                                showCancelButton: false
                            }).then(function () {
                                window.location.reload();
                            })
                        }

                    })
                }
            });
        }
    </script>
}
