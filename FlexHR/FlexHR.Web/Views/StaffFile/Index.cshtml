                                                </div>
                                                <input type="hidden" id="staffId" value="@ViewBag.StaffId" />
                                                <div class="form-group row ml-8">
                                                    <div id="deleteDropzone" class="col-md-11  ml-3">
                                                        <div class="dropzone dropzone-default dropzone-primary" id="myAwesomeDropzone">


                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

                                        </div>
                                    </div>
                                    <!--end::Body-->
                                </div>


                            </div>
                        </form>
