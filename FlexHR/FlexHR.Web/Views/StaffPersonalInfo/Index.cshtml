@model UpdateStaffPersonalInfoDto
@{
    ViewData["Title"] = "Kişisel Bilgiler";
    Layout = "~/Views/Shared/_Layout.cshtml";



}
@section Styles{
    <!--begin::Page Vendors Styles(used by this page)-->
    <link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
    <!--end::Page Vendors Styles-->
}
@await Component.InvokeAsync("StaffSubHeader", new { id = @Model.StaffId })
<div class="card card-custom">
    @await Component.InvokeAsync("StaffNavbar", new { id = Model.StaffId })
    <div class="card-body">
        <div class="d-flex flex-row">
            @await Component.InvokeAsync("StaffCard", new { id = Model.StaffId })
            <div class="tab-content w-100">
                <div class="tab-pane active " role="tabpanel" id="kt_apps_contacts_view_tab_3">
                    <div class="flex-row-fluid ml-lg-8">
                        <!--begin::Form-->
                        <form id="personalInfo" class="form" asp-action="UpdateStaffPersonalInfo" asp-controller="StaffPersonalInfo" method="post">
                            <!--begin::Card-->
                            <div class="card card-custom card-stretch">
                                <!--begin::Header-->
                                <div class="card-header py-3">
                                    <div class="card-title align-items-start flex-column">
                                        <h3 class="card-label font-weight-bolder text-dark lead">
                                            <i class="fas fa-user-edit text-dark mr-2"></i>Kişisel Bilgiler
                                        </h3>
                                        <span class="text-muted font-weight-bold font-size-sm mt-1">Kişisel bilgileri düzenleyin</span>
                                    </div>
                                    <div class="card-toolbar">
                                        @if ((User.IsInRole("UpdateStaffPersonalInfo") || User.IsInRole("Manager")) && User.Identity.IsAuthenticated)
                                        {
                                            <button class="btn btn-primary mr-2">Kaydet</button>
                                        }
                                       
                                    </div>
                                </div>
                                <!--end::Header-->

                                <div class="container">
                                    <!--begin::Body-->
                                    <div class="card-body">

                                        <div class="row">

                                            <div class="col-md-5">
                                                <div class="form-group row">
                                                    <label >Doğum Tarihi</label>
                                                    <div class="input-group">
                                                        <div class="input-group date input-group-solid" id="kt_datetimepicker_4" data-target-input="nearest">
                                                            @{ var birthDate = "";
                                                                if (Model.BirthDate != null)
                                                                {
                                                                    birthDate = Model.BirthDate.Value.ToString("dd.MM.yyyy");
                                                                }
                                                                else
                                                                {
                                                                    birthDate = null;
                                                                }

                                                            }
                                                            <input asp-for="BirthDate" value="@birthDate" type="text" class="form-control datetimepicker-input form-control-lg" placeholder="Tarih Seçiniz" data-target="#kt_datetimepicker_4" />
                                                            <div class="input-group-append" data-target="#kt_datetimepicker_4" data-toggle="datetimepicker">
                                                                <span class="input-group-text">
                                                                    <i class="ki ki-calendar"></i>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label >Medeni Hal</label>
                                                    <div class="input-group">
                                                        <select style=" width: 100% !important;" id="Select1" asp-for="MaritalStatusGeneralSubTypeId" class="form-control form-control-solid form-control-lg" asp-items="ViewBag.MaritalStatusList">
                                                            <option selected value="-1">Seçiniz</option>

                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label >Engel Derecesi</label>
                                                    <div class="input-group">
                                                        <select style=" width: 100% !important;" id="Select2" asp-for="DegreeOfDisabilityGeneralSubTypeId" class="form-control form-control-solid form-control-lg" asp-items="ViewBag.DegreeOfDisabilityList">
                                                            <option selected value="-1">Seçiniz</option>

                                                        </select>
                                                    </div>
                                                </div>


                                                <div class="form-group row">
                                                    <label >Eğitim Durumu</label>
                                                    <div class="input-group">
                                                        <select style=" width: 100% !important;" id="Select3" asp-for="EducationStatusGeneralSubTypeId" class="form-control form-control-solid form-control-lg" asp-items="ViewBag.EducationStatusList">
                                                            <option selected value="-1">Seçiniz</option>

                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-2">   </div>
                                            <div class="col-md-5">
                                                <div class="form-group row">
                                                    <label >Kimlik Numarası</label>
                                                    <div class="input-group">
                                                        <div class="input-group input-group-lg input-group-solid">

                                                            <input asp-for="IdNumber" type="text" class="form-control form-control-lg form-control-solid" placeholder="Kimlik Numarası" />
                                                            <input type="hidden" asp-for="StaffPersonelInfoId" />
                                                            <input type="hidden" asp-for="StaffId" />
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label >Cinsiyet</label>
                                                    <div class="input-group">
                                                        <select style=" width: 100% !important;" id="Select4" asp-for="GenderGeneralSubTypeId" class="form-control form-control-solid form-control-lg" asp-items="ViewBag.GenderList">
                                                            <option selected value="-1">Seçiniz</option>

                                                        </select>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label >Kan Grubu</label>
                                                    <div class="input-group">
                                                        <select style=" width: 100% !important;" id="Select5" asp-for="BloodGroupGeneralSubTypeId" class="form-control form-control-solid form-control-lg" asp-items="ViewBag.BloodGroupList">
                                                            <option selected value="-1">Seçiniz</option>

                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label >Eğitim Düzeyi</label>
                                                    <div class="input-group">
                                                        <select style=" width: 100% !important;" id="Select6" asp-for="EducationLevelGeneralSubTypeId" class="form-control form-control-solid form-control-lg " asp-items="ViewBag.EducationLevelList">
                                                            <option selected value="-1">Seçiniz</option>

                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--end::Body-->
                                </div>


                            </div>
                        </form>
                        <!--end::Form-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#tab_3").addClass("active");
        });
    </script>
    <script>
        $('#Select1').select2({
            placeholder: 'Personel Seçiniz'
        });
        $('#Select2').select2({
            placeholder: 'Seçiniz'
        });
        $('#Select3').select2({
            placeholder: 'Seçiniz'
        });
        $('#Select4').select2({
            placeholder: 'Seçiniz'
        });
        $('#Select5').select2({
            placeholder: 'Seçiniz'
        });
        $('#Select6').select2({
            placeholder: 'Seçiniz'
        });

    </script>
    <script>
        $('input[name="BirthDate"]').mask('00.00.0000');
       
    </script>
    <script>

        FormValidation.formValidation(
            document.getElementById('personalInfo'),
            {
                fields: {

                    BirthDate: {
                        validators: {

                            date: {
                                format: 'DD.MM.YYYY',
                                message: 'Geçerli bir tarih girin'
                            }
                        }
                    },
                    IdNumber: {
                        validators: {

                            numeric: {
                                message: 'Kimlik numaranız rakamlardan oluşmalı'
                            },
                            stringLength: {                            
                                max: 11,
                                message: 'Geçerli bir kimlik numarası girin'
                            }
                        }
                    },

                },

                plugins: {
                    trigger: new FormValidation.plugins.Trigger(),
                    // Bootstrap Framework Integration
                    bootstrap: new FormValidation.plugins.Bootstrap(),
                    // Validate fields when clicking the Submit button
                    submitButton: new FormValidation.plugins.SubmitButton(),
                    // Submit the form when all fields are valid
                    defaultSubmit: new FormValidation.plugins.DefaultSubmit(),
                }
            }
        );
    </script>

    @*Kişisel bilgiler Güncellendiği için sweet alert*@
    <script>
        $(document).ready(function () {

            if (@ViewBag.StaffPersonalInfoUpdateStatus == true) {

                Swal.fire("Güncellendi!", "Güncelleme işlemi başarılı!", "success");
            }
        });
    </script>

}