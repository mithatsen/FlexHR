@*Validation Staff Payment*@
<script>
    var fvRequest = FormValidation.formValidation(
        document.getElementById('modalRequestPaymentForm'),
        {
            fields: {
                PaymentDate: {
                    validators: {
                        notEmpty: {
                            message: 'Tarih alanı boş geçilemez'
                        },
                        date: {
                            format: 'DD.MM.YYYY',
                            message: 'Geçerli bir tarih girin'
                        }

                    }
                },
                Name: {
                    validators: {
                        notEmpty: {
                            message: 'Fiş adı alanı boş geçilemez'
                        },

                    }
                },
                Vat: {
                    validators: {
                        notEmpty: {
                            message: 'Kdv alanı boş geçilemez'
                        },
                        numeric: {
                            message: ' KDV rakamlardan oluşmalıdır'
                        }

                    }
                },
                ReceiptAmount: {
                    validators: {
                        notEmpty: {
                            message: 'Tutar alanı boş geçilemez'
                        },
                        numeric: {
                            message: ' Tutar rakamlardan oluşmalıdır'
                        }

                    }
                },
                Amount: {
                    validators: {
                        notEmpty: {
                            message: 'Tutar alanı boş geçilemez'
                        },
                        numeric: {
                            message: ' Tutar rakamlardan oluşmalıdır'
                        }

                    }
                },
                Description: {
                    validators: {
                        stringLength: {
                            max: 499,
                            message: '500 karakterden az girin'
                        }
                    }
                }
            },
            plugins: {
                trigger: new FormValidation.plugins.Trigger(),
                // Bootstrap Framework Integration
                bootstrap: new FormValidation.plugins.Bootstrap(),
                // Validate fields when clicking the Submit button

            }
        }
    );
    var id = 0;
    function staffChange() {
        id = document.getElementById("personal_select2").value;
    }
    function fncAddRequestReceipt() {
        fvRequest.validate().then(function (status) {
            if (status == 'Valid') {
                var staffIdFd = $('#personal_select2').val() !== undefined ? $('#personal_select2').val() : $('#staffAutoId').val()
                var formdata = new FormData();
                $('.receiptdiv').each(function (i, obj) {

                    var myKey = "";
                    var file;
                    $(this).find('input').each(function (j, obj2) {
                        if ($(obj2).attr("name") == "Name") {
                            myKey += $(obj2).val();
                        }
                        else if ($(obj2).attr("name") == "Vat") {
                            myKey += "~" + $(obj2).val();
                        }
                        else if ($(obj2).attr("name") == "ReceiptAmount") {
                            myKey += "~" + $(obj2).val();
                        }
                        else if ($(obj2).attr("name") == "File") {
                            file = $(obj2);

                        }
                    });
                    formdata.append(myKey, file[0].files[0]);
                });
                formdata.append("Installment", $('#valInstallment').val());
                formdata.append("FeeType", $('#valFeeType').val());
                formdata.append("Amount", $('#txtAmount').val());
                formdata.append("Date", $('#ContractStartDate').val());
                formdata.append("SmDescription", $('#txtSmDescription').val());
                formdata.append("LgDescription", $('#txtLgDescription').val());
                formdata.append("CurrencyType", $('#currencyType').val());
                formdata.append("StaffId", staffIdFd);
                $.ajax({
                    url: "/StaffPayment/AddStaffPaymentWithAjax/" + 99,
                    type: "POST",
                    data: formdata,

                    contentType: false,
                    cache: false,
                    processData: false,
                    success: function (data) {
                        if (data == "true") {
                            Swal.fire({
                                title: "Eklendi!",
                                text: "Kaydınız eklendi.",
                                icon: "success",
                                showCancelButton: false
                            }).then(function () {
                                window.location.reload();
                            })
                        }

                    }
                });

            }


        });
    }
    function DeleteStaffPayment(id) {
        Swal.fire({
            title: "Silmek istediğinize emin misiniz ?",
            text: "Bunu geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonText: "Evet, sil!",
            cancelButtonText: "Hayır, iptal et!",
            reverseButtons: true
        }).then(function (result) {
            if (result.value) {

                $.ajax({
                    method: "POST",
                    url: "/StaffPayment/DeleteStaffPayment/" + id,
                }).done(function (result) {
                    if (result == true) {
                        Swal.fire({
                            title: "Silindi!",
                            text: "Kaydınız silindi.",
                            icon: "success",
                            showCancelButton: false
                        }).then(function () {
                            window.location.reload();
                        })

                    } else {
                        Swal.fire(
                            "Hata",
                            "Kaydınız silinemedi",
                            "hata"
                        )
                    }

                })
            } else if (result.dismiss === "cancel") {
                Swal.fire({
                    title: "İptal Edildi",
                    text: "Kaydınız silinmedi",
                    icon: "error",
                    showCancelButton: false
                })
            }
        });


    }
</script>

