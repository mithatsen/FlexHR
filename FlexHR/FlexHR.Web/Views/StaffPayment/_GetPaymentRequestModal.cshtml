<div class="modal fade" id="staffPaymentRequestModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalSizeLg" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="card-title align-items-start flex-column">
                    <h3 id="PaymentAddModalHeader" class="card-label font-weight-bolder text-dark">
                        <i class="fas fa-credit-card mr-2 text-dark"></i>Harcama Talep Et
                    </h3>

                </div>
                <button type="button" class="text-white bg-danger link-2" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <form id="modalRequestPaymentForm" method="POST" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="flex-row-fluid ">
                        <!--begin::Form-->
                        <!--begin::Card-->
                        <div class="card card-custom card-stretch">
                            <!--begin::Header-->
                            <!--end::Header-->

                            <div class="container ">
                                <!--begin::Body-->
                                <div class="card-body mx-auto">

                                    <div class="row">

                                        @* fiş ekleme divi *@
                                        <div id="receiptDiv" class="col-md-12 ">
                                            <div class="form-group row">
                                                <div class="input-group">
                                                    <a onclick="AddReceipt()" class="btn  btn-primary btn-block font-size-h5 py-4">Fiş Ekle</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12"> <hr /></div>
                                        <div class="col-md-5 ">
                                            <div class="form-group row">
                                                <label>Tutar</label>
                                                <div class="input-group">
                                                    <input id="txtAmount" type="text" name="Amount" class="form-control form-control-solid form-control-lg">
                                                    <div class="input-group-append">
                                                        <select id="currencyType" class="form-control form-control-solid form-control-lg" name="CurrencyGeneralSubTypeId" asp-items="ViewBag.Currencies">
                                                        </select>
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="form-group row">
                                                <label>Açıklama</label>
                                                <div class="input-group">
                                                    <textarea id="txtLgDescription" type="text" style="height:50px;" class="form-control form-control-lg form-control-solid" name="Description" placeholder="Açıklama"></textarea>
                                                </div>
                                            </div>
                                            
                                        </div>
                                        <div class="col-md-2"> </div>
                                        <div class="col-md-5">

                                            <div class="form-group row  ">
                                                <label id="jobFinishDateLbl">Ödeme Tarihi</label>
                                                <div class="input-group">
                                                    <div class="input-group date input-group-solid" id="kt_datetimepicker_9" data-target-input="nearest">
                                                        <input id="ContractStartDate" name="PaymentDate" type="text" class="form-control form-control-lg datetimepicker-input" placeholder="Tarih Seçiniz" data-target="#kt_datetimepicker_9" />
                                                        <div class="input-group-append" data-target="#kt_datetimepicker_9" data-toggle="datetimepicker">
                                                            <span class="input-group-text">
                                                                <i class="ki ki-calendar"></i>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            @if ((User.IsInRole("CreateRequestAbilityToEveryone") || User.IsInRole("Manager")) && User.Identity.IsAuthenticated)
                                            {
                                                <div class="form-group row">
                                                    <label>Personel *</label>
                                                    <div class="input-group">
                                                        <select id="personal_select2" onchange="staffChange()" style=" width: 100% !important;" class="form-control form-control-solid form-control-lg" name="StaffId" asp-items="ViewBag.Staffs">
                                                           
                                                        </select>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <input id="staffAutoId" type="hidden" value="@ViewBag.StaffId" />

                                            }
                                        </div>
                                            

                                    </div>
                                </div>
                                <!--end::Body-->
                            </div>
                        </div>
                        <!--end::Form-->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Vazgeç</button>
                    <button type="button" onclick="fncAddRequestReceipt()" id="btnNewStaff" class="btn btn-primary font-weight-bold">Kaydet</button>
                </div>
            </form>
        </div>
    </div>

</div>



<script>
    let counterRequest = 0;
    function AddReceipt() {
        counterRequest++;
        var divId = "receipt" + counterRequest;
        var deleteId = "delete" + counterRequest;
        var fileInputId = "file" + counterRequest;
        var deleteFileId = "deleteFile" + counterRequest;
        $("#receiptDiv").append('<div id="' + divId + '" class="receiptdiv justify-content-between align-items-center d-flex row"><div class="form-group col-md-5 pl-0"> <label>Fiş Adı</label><div class="input-group"><input type="text" name="Name" class="form-control form-control-solid form-control-lg" /></div></div><div class="form-group col-md-2"> <label>KDV(%)</label><div class="input-group"><input required type="text" name="Vat" class="form-control form-control-solid form-control-lg" /></div></div><div class="form-group col-md-2"> <label>Tutar</label><div class="input-group"><input type="text" name="ReceiptAmount" required class="form-control form-control-solid form-control-lg" /></div></div><div class="form-group my-auto col-md-1"> <label class="my-auto pt-1" for="' + fileInputId + '"> <i id="upload_icon' + counterRequest + '" class="fas fa-upload text-danger" style="font-size: 1.5em !important;"></i> </label> <input id="' + fileInputId + '" onchange="fileInputChange(' + counterRequest + ')" type="file" name="File" style="display:none" /></div><div class="form-group my-auto col-md-1"><div class="card-toolbar"><div class="dropdown dropdown-inline"> <a href="#" class="btn btn-clean btn-hover-light-primary btn-sm btn-icon" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="ki ki-bold-more-ver"></i> </a><div class="dropdown-menu dropdown-menu-sm dropdown-menu-left"><ul class="navi"><li class="navi-item"> <a onclick="DeleteReceiptFile(' + counterRequest + ')" id="' + deleteFileId + '" class="navi-link"> <span class="navi-icon"> <i class="fas fa-folder-minus"></i> </span> <span class="navi-text">Dosyayı Sil</span> <span class="navi-label"> </span> </a></li><li class="navi-item"> <a onclick="DeleteReceipt(' + counterRequest + ')" id="' + deleteId + '" class="navi-link"> <span class="navi-icon"> <i class="fas fa-trash-alt"></i> </span> <span class="navi-text">Fişi Sil</span> <span class="navi-label"> </span> </a></li></ul></div></div></div></div></div>')
    }
    function DeleteReceipt(counterRequest) {
        var divId = "#receipt" + counterRequest;
        $(divId).remove();
    }
    function DeleteReceiptFile(id) {
        debugger;
        var fileInputId = "#file" + id;
        $(fileInputId).val("");
        fileInputChange(id);
    }
    function fileInputChange(id) {
        debugger;
        var fileInputId = "#file" + id;
        var uploadIcon = "#upload_icon" + id;
        if ($(fileInputId).val() != "") {
            $(uploadIcon).removeClass("fas fa-upload text-danger");
            $(uploadIcon).addClass(" fas fa-image text-info");
        } else {
            $(uploadIcon).removeClass("fas fa-image text-info");
            $(uploadIcon).addClass(" fas fa-upload text-danger");
        }
    }
</script>
