@model ListJobRotationDto
@{
    ViewData["Title"] = "JobRotationDescribing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <!--begin::Page Vendors Styles(used by this page)-->
    <link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
    <!--end::Page Vendors Styles-->
}
<div class="card card-custom ">
    <div class="card-body">
        <!--begin::Profile Personal Information-->
        <div class="tab-content">
            <div class="tab-pane active " role="tabpanel" id="kt_apps_contacts_view_tab_2">
                <!--begin::Entry-->
                <div class="d-flex flex-column-fluid">
                    <!--begin::Container-->
                    <div class="container-fluid">
                        <!--begin::Notice-->
                        <!--end::Notice-->
                        <!--begin::Card-->
                        <div class="row">
                            <div class="col-md-4">
                                <div class="card card-custom">
                                    <div class="card-header flex-wrap py-5">
                                        <div class="card-title">
                                            <i class="fas fa-people-arrows text-dark mr-2"></i>
                                            <h3 class="card-label">
                                                Vardiya Atama
                                            </h3>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <form asp-action="JobRotationAssignStaff" asp-controller="JobRotation" method="post">
                                            <div class="form-group row">
                                                <select id="JobRotationSelect" onchange="jobRotationChange()" class="form-control form-control-solid d-block  form-control-lg" name="JobRotationId" asp-items="ViewBag.JobRotationList">
                                                    <option hidden value="">Vardiya Seçiniz</option>
                                                </select>
                                            </div>

                                            <div class="form-group row">
                                                <select class="form-control select2" id="staffSelectList" name="StaffList" multiple="multiple"  asp-items="ViewBag.PersonalList">
                                                </select>
                                            </div>
                                            <div class="form-group row">
                                                @* onclick="jobRotationAssignStaffClickFunction()" *@
                                                <button type="submit" class="btn btn-success btn-block">Kaydet</button>
                                                <a onclick="deleteAllRotation()" class="btn btn-secondary btn-block">Sıfırla</a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8" id="JobRotationDiv">
                               
                            </div>
                        </div>

                        <!--end::Card-->
                    </div>
                    <!--end::Container-->
                </div>
                <!--end::Entry-->
            </div>
        </div>
    </div>

</div>


@section Scripts{
    @*begin::Page Scripts(used by this page)*@
    <script src="~/assets/js/pages/crud/forms/validation/form-controls.js"></script>
    @*end::Page Scripts*@
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/assets/js/pages/crud/datatables/advanced/column-rendering.js" charset="windows-1254"></script>
    <script>
   // multi select
        $('#staffSelectList').select2({
            closeOnSelect: false,
            placeholder: "Perseonel Seçiniz",
            width: '100%'
        });
    </script>
    <script>
        function jobRotationChange() {
           
            var id = $("#JobRotationSelect").val();
            var modelContent = $("#JobRotationDiv")
            $("#JobRotationDiv").empty();
            $("#staffSelectList").empty();
            $.ajax({
                method: "GET",
                url: "/JobRotation/GetStaffByRotationId/" + id,
                dataType: "html",
                cache: false,
            }).done(function (content) {

                if (content != null) {
                    modelContent.html(content);
                    $("#tableHeader").text($("#JobRotationSelect option:selected").text()+"Vardiya Listesi" );
                }
            }).fail(function (error) {
                alert(error);
            });

            $.ajax({
                method: "GET",
                url: "/JobRotation/GetJobRotationSelectbox/",
                //dataType: "json",
                cache: false,
            }).done(function (data) {
                debugger;
                if (data != null) {
                    for (var i = 0; i < data.length; i++) {
                        if (id == data[i].jobRotationId) {
                            var opt = '<option selected value="' + data[i].staffId + '">' + data[i].nameSurname + '</option>';
                            $("#staffSelectList").append(opt);
                        } else {
                            var opt = '<option value="' + data[i].staffId + '">' + data[i].nameSurname + '</option>';
                            $("#staffSelectList").append(opt);
                        }
                    }
                }
            }).fail(function (error) {
                alert(error);
            });
        }
    </script>
    <script>
        function deleteAllRotation() {
            Swal.fire({
                title: "Tüm vardiyaları sıfırlamak istediğinize emin misiniz ?",
                text: "Bunu geri alamazsınız!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Evet!",
                cancelButtonText: "Hayır!",
                reverseButtons: true
            }).then(function (result) {
                if (result.value) {

                    $.ajax({
                        method: "POST",
                        url: "/JobRotation/DeleteAllRotation",
                    }).done(function (result) {
                        if (result == true) {
                            Swal.fire({
                                title: "Silindi!",
                                text: "İşlem başarılı.",
                                icon: "success",
                                showCancelButton: false
                            }).then(function () {
                                window.location.reload();
                            })

                        } else {
                            Swal.fire(
                                "Hata",
                                "İşlem başarısız",
                                "error"
                            )
                        }

                    })
                } 
            });

        }
    </script>
}