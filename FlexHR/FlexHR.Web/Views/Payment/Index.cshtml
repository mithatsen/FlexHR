@model ListPaymentViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <!--begin::Info-->
        <div class="d-flex align-items-center flex-wrap mr-2">
            <!--begin::Page Title-->
            <!--end::Page Title-->
            <!--begin::Actions-->
            <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-4 bg-gray-200"></div>
            <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">Ödeme Talepleri</h5>

            <!--end::Info-->
        </div>
        <!--begin::Toolbar-->
        <div class="d-flex align-items-center">
            @if ((User.IsInRole("ViewLeaveRequestPage") || User.IsInRole("Manager")) && User.Identity.IsAuthenticated)
            {
                <!--begin::Actions-->
                <a class="btn btn-clean btn-sm font-weight-bold font-size-base mr-1 " id="tab_1" asp-controller="Leave" asp-action="Index" asp-route-id="@Model">
                    <span class="nav-icon mr-2">
                        <span class="svg-icon mr-3">
                            <i class="fas fa-plane-departure"></i>
                        </span>
                    </span>
                    <span class="nav-text font-weight-bold">İzinler </span>
                </a>
            }
            @if ((User.IsInRole("ViewPaymentRequestPage") || User.IsInRole("Manager")) && User.Identity.IsAuthenticated)
            {
                <a class="btn btn-clean btn-sm font-weight-bold font-size-base mr-1 active" id="tab_2" asp-controller="Payment" asp-action="Index" asp-route-id="@Model">
                    <span class="nav-icon mr-2">
                        <span class="svg-icon mr-3">
                            <i class="fas fa-chart-bar"></i>
                        </span>
                    </span>
                    <span class="nav-text font-weight-bold">Ödemeler</span>
                </a>
            }
            @if ((User.IsInRole("ViewShiftRequestPage") || User.IsInRole("Manager")) && User.Identity.IsAuthenticated)
            {
                <a class="btn btn-clean btn-sm font-weight-bold font-size-base mr-1 " id="tab_2" asp-controller="Shift" asp-action="Index" asp-route-id="@Model">
                    <span class="nav-icon mr-2">
                        <span class="svg-icon mr-3">
                            <i class="fas fa-chart-bar"></i>
                        </span>
                    </span>
                    <span class="nav-text font-weight-bold">Mesailer</span>
                </a>
                <!--end::Actions-->
            }
        </div>
        <!--end::Toolbar-->
    </div>
</div>

<br />
<div class="card card-custom">
    <div class="card-header card-header-tabs-line">
        <div class="card-toolbar">
            <ul class="nav nav-tabs nav-tabs-space-lg nav-tabs-line nav-tabs-bold nav-tabs-line-3x" role="tablist">
                @if ((User.IsInRole("ViewPaymentRequestPendingApprovalPaymentsTab") || User.IsInRole("Manager")) && User.Identity.IsAuthenticated)
                {
                    <li class="nav-item mr-3">
                        <a class="nav-link active" data-toggle="tab" href="#kt_apps_contacts_view_tab_2" id="waitingApprovePayment" onclick="localStorage.PaymentRequestTab = 1">
                            <span class="nav-icon mr-2">
                                <span class="svg-icon mr-3">
                                    <i class="fas fa-user-clock"></i>
                                </span>
                            </span>
                            <span class="nav-text font-weight-bold">Onay Bekleyenler</span>
                        </a>
                    </li>
                }
                @if ((User.IsInRole("ViewPaymentRequestApprovedPaymentsTab") || User.IsInRole("Manager")) && User.Identity.IsAuthenticated)
                {
                    <li class="nav-item mr-3">
                        <a class="nav-link" data-toggle="tab" href="#kt_apps_contacts_view_tab_3" id="approvedPaymentDone" onclick="localStorage.PaymentRequestTab = 2">
                            <span class="nav-icon mr-2">
                                <span class="svg-icon mr-3">
                                    <i class="fas fa-user-check"></i>
                                </span>
                            </span>
                            <span class="nav-text font-weight-bold">Onaylananlar</span>
                        </a>
                    </li>
                }
                @if ((User.IsInRole("ViewPaymentRequestRejectedPaymentsTab") || User.IsInRole("Manager")) && User.Identity.IsAuthenticated)
                {
                    <li class="nav-item mr-3">
                        <a class="nav-link" data-toggle="tab" href="#kt_apps_contacts_view_tab_4">
                            <span class="nav-icon mr-2">
                                <span class="svg-icon mr-3">
                                    <i class="fas fa-user-times"></i>
                                </span>
                            </span>
                            <span class="nav-text font-weight-bold">Reddedilenler</span>
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
    <div class="card card-custom">
        <div class="card-body  ">
            <div class="tab-content pt-5">

                @*Onay bekleyenler*@
                <div class="tab-pane active" id="kt_apps_contacts_view_tab_2" role="tabpanel">
                    <table class="table table-separate table-head-custom table-checkable" id="kt_datatable_14">
                        <thead>
                            <tr>
                                <th>Ad Soyad</th>
                                <th>Tarih</th>
                                <th>Ödeme Türü</th>
                                <th width="25%">Açıklama</th>
                                <th width="10%">Tutar</th>
                                <th>Oluştrulma Tarihi</th>
                                @if ((User.IsInRole("ApprovePayment") || (User.IsInRole("RejectPayment")) || User.IsInRole("Manager")) && User.Identity.IsAuthenticated)
                                {
                                    <th width="12%">Onaylama İşlemi</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PendingApprovalPayments)
                            {
                                <tr>
                                    <td><a asp-controller="StaffGeneral" asp-action="Index" asp-route-id="@item.StaffId">@item.NameSurname</a></td>
                                    <td>@item.PaymentDate.ToShortDateString()</td>
                                    <td>@item.PaymentType</td>
                                    <td>@item.Description</td>
                                    <td>@item.Amount @item.CurrencyType </td>
                                    <td>@item.CreationDate.ToShortDateString()</td>
                                    @*<td>@item.IsPaid</td>*@

                                    <td>
                                        @if ((User.IsInRole("ApprovePayment") || User.IsInRole("Manager")) && User.Identity.IsAuthenticated)
                                        {
                                            <a class="btn btn-hover-bg-light btn-sm" onclick="approvePayment(@item.StaffPaymentId)"><span><i class="fas fa-check text-success"></i></span></a>
                                        }
                                        @if ((User.IsInRole("RejectPayment") || User.IsInRole("Manager")) && User.Identity.IsAuthenticated)
                                        {
                                            <a class="btn btn-hover-bg-light btn-sm" onclick="rejectPayment(@item.StaffPaymentId)"><span><i class="fas fa-times text-danger"></i></span></a>
                                        }
                                    </td>

                                </tr>

                            }
                        </tbody>
                    </table>
                </div>


                @*onaylananlar*@
                <div class="tab-pane" id="kt_apps_contacts_view_tab_3" role="tabpanel">
                    <table class="table table-separate table-head-custom table-checkable" id="kt_datatable_15">
                        <thead>
                            <tr>
                                <th>Ad Soyad</th>
                                <th>Tarih</th>
                                <th>Ödeme Türü</th>
                                <th width="25%">Açıklama</th>
                                <th width="10%">Tutar</th>
                                <th>Oluştrulma Tarihi</th>
                                <th width="12%">Ödeme Yap</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ApprovedPayments)
                            {
                                <tr>
                                    <td><a asp-controller="StaffGeneral" asp-action="Index" asp-route-id="@item.StaffId">@item.NameSurname</a></td>
                                    <td>@item.PaymentDate.ToShortDateString()</td>
                                    <td>@item.PaymentType</td>
                                    <td>@item.Description</td>
                                    <td>@item.Amount  @item.CurrencyType </td>
                                    <td>@item.CreationDate.ToShortDateString()</td>

                                    <td>
                                        @if (item.IsPaid)
                                        {
                                            <span class=" badge badge-success">Ödendi</span>
                                        }
                                        else
                                        {
                                            <a class="btn btn-hover-bg-light btn-sm" onclick="isPaidPayment(@item.StaffPaymentId)"><span><i class="fas fa-check text-success"></i></span></a>
                                        }

                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
                @*reddedilenler*@
                <div class="tab-pane" id="kt_apps_contacts_view_tab_4" role="tabpanel">
                    <table class="table table-separate table-head-custom table-checkable" id="kt_datatable_16">
                        <thead>
                            <tr>
                                <th>Ad Soyad</th>
                                <th>Tarih</th>
                                <th>Ödeme Türü</th>
                                <th width="25%">Açıklama</th>
                                <th width="10%">Tutar</th>
                                <th>Oluştrulma Tarihi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.RejectedPayments)
                            {
                                <tr>
                                    <td><a asp-controller="StaffGeneral" asp-action="Index" asp-route-id="@item.StaffId">@item.NameSurname</a></td>
                                    <td>@item.PaymentDate.ToShortDateString()</td>
                                    <td>@item.PaymentType</td>
                                    <td>@item.Description</td>
                                    <td>@item.Amount  @item.CurrencyType </td>
                                    <td>@item.CreationDate.ToShortDateString()</td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script src="~/assets/js/pages/custom/contacts/edit-contact.js"></script>
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/assets/js/pages/crud/datatables/advanced/column-rendering.js" charset="windows-1254"></script>
    <script src="~/js/payment.js"></script>
    <script>
        $(document).ready(function () {
            if (localStorage.PaymentRequestTab == 2) {
                $("#approvedPaymentDone").addClass("active");
                $("#kt_apps_contacts_view_tab_3").addClass("active");
                $("#kt_apps_contacts_view_tab_2").removeClass("active");
                $("#waitingApprovePayment").removeClass("active");
            }
            else {
                $("#waitingApprovePayment").addClass("active");
                $("#kt_apps_contacts_view_tab_2").addClass("active");
                $("#kt_apps_contacts_view_tab_3").removeClass("active");
                $("#approvedPaymentDone").removeClass("active");
            }
            

        });
    </script>
}
